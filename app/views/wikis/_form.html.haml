.span8
  = form_for @wiki, :html => {:class => 'form-horizontal'} do |f|
    - if @wiki.errors.any?
      #errorExplanation
        %h3= "#{pluralize(@wiki.errors.count, 'error')} prohibited this class from being saved:"
        %ul
          - @wiki.errors.full_messages.each do |msg|
            %li= msg
    %fieldset
      %legend Wiki
      .control-group
        = f.label :name
        .controls= f.text_field :name, :style => "width: 700px"
      .control-group
        = f.label :homepage
        .controls= f.text_area :homepage, :style => "width: 700px"
      .form-actions
        %button.btn.btn-primary{:type => "submit"} Save changes
        %button.btn{:type => "reset"} Cancel
